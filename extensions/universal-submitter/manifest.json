{
  "manifest_version": 3,
  "name": "Universal Request Submitter",
  "version": "1.0",
  "description": "Helper for submitting apps to directories and tracking submissions.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {}
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
