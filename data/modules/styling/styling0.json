{
  "theme": "lofi",
  "font": "sen",
  "roundness": ["rounded-md", "rounded-2xl"],
  "shadows": ["shadow-md", "shadow-lg"],
  "borders": ["border border-primary"],
  "paddings": {
    "card": "p-6 sm:p-8"
  },
  "links": ["link link-hover"],
  "general": {
    "language": "en",
    "html": "scroll-smooth",
    "body": "select-none",
    "container": "max-w-3xl mx-auto",
    "section": "py-32 px-4 sm:px-8",
    "spacing": "py-12 px-4 sm:px-8",
    "label": "text-sm uppercase font-bold text-center text-primary",
    "title": "text-2xl sm:text-3xl font-extrabold leading-none"
  },
  "SectionHeader": {
    "spacing": "flex justify-between items-center px-3 sm:px-5 py-3"
  },
  "SectionHero": {
    "headline": "text-3xl sm:text-4xl font-extrabold leading-none capitalize",
    "paragraph": "opacity-90 px-4 sm:px-0",
    "textalign": "text-center sm:text-left"
  },
  "SectionFAQ": {
    "spacing": "flex flex-col space-y-6"
  },
  "SectionFooter": {
    "section": "bg-base-200 text-base-content",
    "container": "max-w-3xl mx-auto items-center sm:items-start p-12 px-5",
    "spacing": "flex flex-col sm:flex-row justify-between gap-10 sm:gap-16",
    "textalign": "text-center sm:text-left"
  }
}
