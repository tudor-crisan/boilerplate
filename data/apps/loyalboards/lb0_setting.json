          "placeholder": "Select your role",
          "options": [
            {
              "label": "Developer",
              "value": "developer"
            },
            {
              "label": "Designer",
              "value": "designer"
            },
            {
              "label": "Manager",
              "value": "manager"
            }
          ]
        },
        "bio": {
          "type": "textarea",
          "required": false,
          "className": "w-full",
          "value": "",
          "label": "Bio",
          "placeholder": "Tell us about yourself",
          "rows": 4
        }
      }
    }
