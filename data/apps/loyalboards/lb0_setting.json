{
  "auth": {
    "providers": ["resend", "google"],
    "hasThemePages": true,
    "hasThemeEmails": true
  },
  "pages": {
    "dashboard": {
      "component": "LoyalBoardsDashboard"
    },
    "paths": {
      "boardPublic": {
        "source": "/b/:boardId",
        "destination": "/modules/boards/b/:boardId"
      },
      "boardPrivate": {
        "source": "/dashboard/b/:boardId",
        "destination": "/modules/boards/dashboard/b/:boardId"
      },
      "previewEmail": {
        "source": "/preview/email",
        "destination": "/modules/preview/email"
      },
      "billingSuccess": {
        "source": "/success",
        "destination": "/modules/billing/success"
      }
    }
  },
  "metadata": {
    "home": {
      "title": "Collect customer feedback to build better products",
      "description": "Create a feedback board in minutes, prioritize features, and build products your customers will love."
    },
    "dashboard": {
      "title": "Dashboard - LoyalBoards",
      "description": "Create feedback boards your customers will love."
    },
    "auth": {
      "title": "Authenticate - LoyalBoards",
      "description": "Create feedback boards your customers will love."
    },
    "modules": {
      "board": {
        "title": "Board - LoyalBoards",
        "description": "Create feedback boards your customers will love."
      }
    }
  },
  "forms": {
    "general": {
      "backend": {
        "responses": {
          "notAuthorized": {
            "message": "Not authorized",
            "status": 401
          },
          "noAccess": {
            "message": "Please subscribe first",
            "status": 403
          },
          "sessionLost": {
            "message": "Session lost, log-in again",
            "status": 401
          },
          "noInternetConnection": {
            "message": "No internet connection",
            "status": 408
          },
          "serverError": {
            "message": "Something went wrong",
            "status": 500
          },
          "requestSuccessful": {
            "message": "Request was successful",
            "status": 200
          }
        }
      }
    },
    "Billing": {
      "backend": {
        "responses": {
          "urlsRequired": {
            "message": "Redirect URLs are required",
            "status": 400
          },
          "checkoutCreated": {
            "message": "Next, enter your payment details",
            "status": 200
          },
          "portalCreated": {
            "message": "You are being redirected to billing",
            "status": 200
          }
        }
      }
    },
    "Board": {
      "formConfig": {
        "title": "Create a new feedback board",
        "button": "Create Board",
        "apiUrl": "/api/modules/boards/board"
      },
      "inputsConfig": {
        "name": {
          "type": "text",
          "required": true,
          "value": "",
          "label": "Board name",
          "placeholder": "Enter board name"
        }
      },
      "backend": {
        "responses": {
          "nameRequired": {
            "message": "Board name is required",
            "inputErrors": {
              "name": "This field is required"
            },
            "status": 400
          },
          "boardIdRequired": {
            "message": "Board ID is required",
            "inputErrors": {},
            "status": 400
          },
          "createSuccesfully": {
            "message": "Board created succesfully",
            "status": 200
          },
          "deleteSuccesfully": {
            "message": "Board was succesfully deleted",
            "status": 200
          }
        }
      },
      "mockConfig": {
        "isEnabled": false,
        "isError": true,
        "isSuccess": false,
        "responses": {
          "error": {
            "error": "Not authorized",
            "inputErrors": {
              "name": "This is required"
            },
            "status": 401
          },
          "success": {
            "message": "Board created succesfully",
            "status": 200
          }
        }
      }
    },
    "MockData": {
      "inputsConfig": {
        "role": {
          "type": "select",
          "required": true,
          "className": "w-full",
          "value": "developer",
